<!doctype html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="author" content="Drilliak">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>
    {% if app.environment == "prod" %}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('dist/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('dist/base.css') }}">
        {% endblock %}
    {% endif %}
    {% block stylesheets_global %}

    {% endblock %}
    <link rel="icon" type="image/png" href="{{ asset('img/favicon_brohazard.png') }}">
</head>
<body>
{% block header %}
    {% include "@App/navbar/navbar.html.twig" %}
{% endblock %}
{% for type, flashes in app.session.flashbag.all %}
    <div class="container">
        {% for flash in flashes %}
            <div class="alert alert-{{ type }} alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {{ flash }}
            </div>
        {% endfor %}
    </div>
{% endfor %}

{% block content %} {% endblock %}
{% block footer %}
    <div class="text-center">
        <small><a href="https://github.com/Drilliak/Brohazard/issues">Signaler un bug, faire une suggestion.</a></small>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('jquery.min.js') }}"></script>
    <script>
        setTimeout(function () {
            $('.alert').slideUp(500, function () {
                $(this).remove();
            });
        }, 5000)
    </script>
    <script src="{{ asset('dist/bootstrap.js') }}"></script>

{% endblock %}

{% if app.environment == "dev" %}
    {% block javascript_dev %}
        <script src="{{ asset('dist/base.js') }}"></script>
    {% endblock %}
{% endif %}


</body>
</html>