{% extends "@App/Admin/dashboard.html.twig" %}

{% block data %}
    <h1 class="page-header">Utilisateurs</h1>
    {{ form_start(searchForm, {"attr" : {"class": "form-inline", "id": "search-user"}}) }}
    {{ form_end(searchForm) }}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Nom d'uitlisateur</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ form(roleForms[user.id]) }}</td>
                <td>
                    {{ form_start(deletesForms[user.id], {attr: {style:"display:inline"}}) }}
                    <input type="submit" value="Supprimer" class="btn btn-danger">
                    {{ form_end(deletesForms[user.id]) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('dist/dashboard-user.js') }}"></script>
{% endblock %}